              if (typeof pass === 'undefined') {
                  bootbox.prompt({
                      title: "<h3>Enter password</h3>",
                                inputType: "password",
                                onEscape: true,
                                backdrop: true,
                                centerVertical: true,
                                scrollable: true
                                    , callback: function (result) {
                          if (result != null) { checkpassword(sha1(result)) };
                      }
                  });
              } else {
                  checkpassword(pass);
              };

                });
        });


 



                    function checkpassword(pass) {
            $.ajax({
                            url: '/Map?handler=PwdCheck',
                data: {
                                pwd: pass,
                    congId: "@Model.Cong.CongId",
                    mapId: "@Model.Map.MapId"}
                        })
                .done(function (result) {
                        console.log(result);
                        if (result == "false") {
                            Cookies.remove("territory.mobi.dnclogin");
                            bootbox.dialog({
                                title: "<h3>Do Not Calls</h3>",
                            message: "Password incorrect",
                            onEscape: true,
                            backdrop: true,
                            centerVertical: true,
                            scrollable: true
                            });
                        } else {
                            Cookies.set("territory.mobi.dnclogin", pass,1);
                            bootbox.dialog({
                                title: "<h3>Do Not Calls</h3>",
                            message: result,
                            onEscape: true,
                            backdrop: true,
                            centerVertical: true,
                            scrollable: true
                                });
                        }
                    })
